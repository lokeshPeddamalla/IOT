<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air Conditioner"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/mode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/mode_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#09F2F6"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinner_outline"/>

    <!-- Temperature Control -->
    <TextView
        android:id="@+id/temperature_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/temperature_decrease"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:background="@drawable/button"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <SeekBar
            android:id="@+id/temperature_seekbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="30"
            android:progress="24"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/temperature_increase"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:background="@drawable/button"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Fan Dropdown -->
    <TextView
        android:id="@+id/fan_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fan Speed"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/fan_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#09F2F6"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinner_outline"/>

    <TextView
        android:id="@+id/swing_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swing Direction"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/swing_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/swing_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up"
            android:textColor="#000"/>

        <RadioButton
            android:id="@+id/swing_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down"
            android:textColor="#000"
            android:layout_marginStart="16dp"/>
    </RadioGroup>

    <!-- Power Button -->
    <TextView
        android:id="@+id/power_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <Switch
        android:id="@+id/power_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power On/Off      "
        android:textColor="#000"
        android:thumbTint="#09F2F6"/>
</LinearLayout>