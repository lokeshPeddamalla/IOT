<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThingDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="50dp"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Thing Details"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/spinner_outline"/>
            <EditText
                android:id="@+id/et_thingname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Thing name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This field is required"
                android:textSize="11sp"
                android:paddingStart="5dp"/>
            <EditText
                android:id="@+id/et_thingId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unique TID"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This field is required"
                android:textSize="11sp"
                android:paddingStart="5dp"/>
            <EditText
                android:id="@+id/et_thingKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Thing Key"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This field is required"
                android:textSize="11sp"
                android:paddingStart="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_thingSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="#09F2F6"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/et_thingOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Enter OTP"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/btn_thingOtpVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="#09F2F6"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</RelativeLayout>